---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import CosmicBadge from '../components/CosmicBadge.astro'
import { getGuildMemberships, getBlogPosts, getGuildValues } from '../lib/cosmic'
import type { GuildMembership, BlogPost, GuildValue } from '../types'

const memberships = await getGuildMemberships() as GuildMembership[]
const posts = await getBlogPosts() as BlogPost[]
const values = await getGuildValues() as GuildValue[]
const bucketSlug = import.meta.env.COSMIC_BUCKET_SLUG as string
---

<Layout 
  title="Space Time Navigators Guild - Making San Francisco the Capitol of the Universe"
  description="Join the Space Time Navigators Guild and be part of making San Francisco the home of faster-than-light travel and the capitol of the United Federated Galaxies."
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative py-20 px-4 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-cosmic-600/20 to-cosmic-800/20"></div>
      <div class="container mx-auto relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-cosmic-400 to-cosmic-200 bg-clip-text text-transparent">
            Welcome to the Space Time Navigators Guild
          </h1>
          <p class="text-xl md:text-2xl text-cosmic-200 mb-8">
            Making San Francisco the Capitol of the Universe
          </p>
          <p class="text-lg text-cosmic-300 mb-10">
            Join us in pioneering faster-than-light travel and establishing Earth's role in the United Federated Galaxies and Planets.
          </p>
          <div class="flex flex-wrap gap-4 justify-center">
            <a href="/memberships" class="px-8 py-3 bg-cosmic-600 hover:bg-cosmic-700 rounded-lg font-semibold transition-colors">
              Explore Memberships
            </a>
            <a href="/about" class="px-8 py-3 bg-cosmic-800 hover:bg-cosmic-700 rounded-lg font-semibold transition-colors">
              Learn More
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Guild Values Section -->
    {values.length > 0 && (
      <section class="py-16 px-4">
        <div class="container mx-auto">
          <h2 class="text-4xl font-bold text-center mb-12">Our Core Values</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
            {values.map((value) => (
              <div class="bg-cosmic-900/50 backdrop-blur-sm rounded-xl p-8 border border-cosmic-800 hover:border-cosmic-700 transition-colors">
                {value.metadata?.icon_image && (
                  <img 
                    src={`${value.metadata.icon_image.imgix_url}?w=160&h=160&fit=crop&auto=format,compress`}
                    alt={value.title}
                    width="80"
                    height="80"
                    class="rounded-lg mb-6"
                  />
                )}
                <h3 class="text-2xl font-semibold mb-4 text-cosmic-300">
                  {value.metadata?.value_title || value.title}
                </h3>
                {value.metadata?.description && (
                  <div class="prose prose-invert prose-cosmic max-w-none text-cosmic-300">
                    <div set:html={value.metadata.description} />
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Memberships Section -->
    {memberships.length > 0 && (
      <section class="py-16 px-4 bg-cosmic-900/30">
        <div class="container mx-auto">
          <h2 class="text-4xl font-bold text-center mb-4">Guild Memberships</h2>
          <p class="text-center text-cosmic-300 mb-12 max-w-2xl mx-auto">
            Choose the membership tier that fits your journey to the stars
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
            {memberships.map((membership) => (
              <div class="bg-cosmic-900/50 backdrop-blur-sm rounded-xl overflow-hidden border border-cosmic-800 hover:border-cosmic-700 transition-all hover:scale-105">
                {membership.metadata?.featured_image && (
                  <img 
                    src={`${membership.metadata.featured_image.imgix_url}?w=800&h=400&fit=crop&auto=format,compress`}
                    alt={membership.title}
                    width="400"
                    height="200"
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-8">
                  <h3 class="text-2xl font-bold mb-2">
                    {membership.metadata?.membership_name || membership.title}
                  </h3>
                  {membership.metadata?.price && (
                    <p class="text-3xl font-bold text-cosmic-400 mb-4">
                      {membership.metadata.price}
                    </p>
                  )}
                  {membership.metadata?.benefits && (
                    <div class="mb-6 text-cosmic-300">
                      {membership.metadata.benefits.split(',').map((benefit: string) => (
                        <div class="flex items-start gap-2 mb-2">
                          <span class="text-cosmic-400 mt-1">âœ“</span>
                          <span>{benefit.trim()}</span>
                        </div>
                      ))}
                    </div>
                  )}
                  <a 
                    href={`/memberships/${membership.slug}`}
                    class="block w-full text-center px-6 py-3 bg-cosmic-600 hover:bg-cosmic-700 rounded-lg font-semibold transition-colors"
                  >
                    Learn More
                  </a>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Latest Blog Posts Section -->
    {posts.length > 0 && (
      <section class="py-16 px-4">
        <div class="container mx-auto">
          <h2 class="text-4xl font-bold text-center mb-4">Latest News from the Guild</h2>
          <p class="text-center text-cosmic-300 mb-12 max-w-2xl mx-auto">
            Stay updated on the latest developments in FTL travel and Guild activities
          </p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {posts.slice(0, 3).map((post) => (
              <article class="bg-cosmic-900/50 backdrop-blur-sm rounded-xl overflow-hidden border border-cosmic-800 hover:border-cosmic-700 transition-all hover:scale-105">
                {post.metadata?.featured_image && (
                  <img 
                    src={`${post.metadata.featured_image.imgix_url}?w=800&h=400&fit=crop&auto=format,compress`}
                    alt={post.title}
                    width="400"
                    height="200"
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-6">
                  {post.metadata?.publish_date && (
                    <time class="text-sm text-cosmic-400 mb-2 block">
                      {new Date(post.metadata.publish_date).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                  )}
                  <h3 class="text-xl font-bold mb-3 line-clamp-2">
                    {post.metadata?.title || post.title}
                  </h3>
                  {post.metadata?.excerpt && (
                    <p class="text-cosmic-300 mb-4 line-clamp-3">
                      {post.metadata.excerpt}
                    </p>
                  )}
                  <a 
                    href={`/blog/${post.slug}`}
                    class="inline-flex items-center text-cosmic-400 hover:text-cosmic-300 font-semibold transition-colors"
                  >
                    Read More
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
          <div class="text-center mt-12">
            <a 
              href="/blog"
              class="inline-block px-8 py-3 bg-cosmic-800 hover:bg-cosmic-700 rounded-lg font-semibold transition-colors"
            >
              View All Posts
            </a>
          </div>
        </div>
      </section>
    )}
  </main>

  <Footer />
  <CosmicBadge bucketSlug={bucketSlug} />
</Layout>