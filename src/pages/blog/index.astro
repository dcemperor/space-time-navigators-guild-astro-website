---
// src/pages/blog/index.astro
import Layout from '../../layouts/Layout.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
import CosmicBadge from '../../components/CosmicBadge.astro'
import { getBlogPosts } from '../../lib/cosmic'
import type { BlogPost } from '../../types'

const posts = await getBlogPosts() as BlogPost[]
const bucketSlug = import.meta.env.COSMIC_BUCKET_SLUG as string
---

<Layout 
  title="Blog - Space Time Navigators Guild"
  description="Latest news and updates from the Space Time Navigators Guild about FTL travel and interstellar navigation."
>
  <Header />
  
  <main class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto text-center mb-16">
      <h1 class="text-5xl font-bold mb-6">Guild News & Updates</h1>
      <p class="text-xl text-cosmic-300">
        Stay informed about the latest developments in faster-than-light travel and Guild activities
      </p>
    </div>

    {posts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {posts.map((post) => (
          <article class="bg-cosmic-900/50 backdrop-blur-sm rounded-xl overflow-hidden border border-cosmic-800 hover:border-cosmic-700 transition-all hover:scale-105">
            {post.metadata?.featured_image && (
              <img 
                src={`${post.metadata.featured_image.imgix_url}?w=800&h=400&fit=crop&auto=format,compress`}
                alt={post.title}
                width="400"
                height="200"
                class="w-full h-48 object-cover"
              />
            )}
            <div class="p-6">
              {post.metadata?.publish_date && (
                <time class="text-sm text-cosmic-400 mb-2 block">
                  {new Date(post.metadata.publish_date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              )}
              <h2 class="text-xl font-bold mb-3 line-clamp-2">
                {post.metadata?.title || post.title}
              </h2>
              {post.metadata?.excerpt && (
                <p class="text-cosmic-300 mb-4 line-clamp-3">
                  {post.metadata.excerpt}
                </p>
              )}
              <a 
                href={`/blog/${post.slug}`}
                class="inline-flex items-center text-cosmic-400 hover:text-cosmic-300 font-semibold transition-colors"
              >
                Read Full Article
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-16">
        <p class="text-xl text-cosmic-300">No blog posts available at this time.</p>
      </div>
    )}
  </main>

  <Footer />
  <CosmicBadge bucketSlug={bucketSlug} />
</Layout>